{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "lib",
        "module": "es2015",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "moduleResolution": "node",
        "baseUrl": ".",
        "lib": [
          "es2015",
          "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "lib"
    ],
    "angularCompilerOptions": {
      "entryModule": "./src/app/app.module#AppModule",
      "genDir": "./src/ngfactory"
    }
}
